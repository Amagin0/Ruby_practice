<div class="card tweet-card">
  <div class="card-header">
    ツイートする
  </div>
  <div class="card-body">
    <%= form_with model: @twitter, url: tweets_path do |f| %>
      <div class="tweet-body">
        <%= image_tag current_user.profile_photo, class: "avatar avatar-size32" %>
        <%= f.text_area :text, placeholder: "いまどうしてる？", class: "form-control", rows: "3" %>
      </div>
      <div class="buttons">
        <%= f.submit "ツイート", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>